# Production Environment Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO

# Trading Configuration
TRADING_ENABLED=true
PAPER_TRADING=false
PORT=8001

# Database Configuration (use production database)
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://redis-host:6379

# Security
JWT_SECRET=production-jwt-secret-key-here

# API URLs (for frontend - will be updated with production URLs)
VITE_API_URL=https://your-app-name.up.railway.app
VITE_WS_URL=wss://your-app-name.up.railway.app

# Dhan API Credentials (these will be set as Railway environment variables)
# DHAN_CLIENT_ID=
# DHAN_ACCESS_TOKEN=

# Monitoring
PROMETHEUS_URL=
GRAFANA_URL=

# Optional: Alerts
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
